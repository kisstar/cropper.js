{
  "name": "cropper.js",
  "version": "0.0.1",
  "description": "使用 JavaScript 创建的一个简单轻量的图片裁剪器。",
  "main": "dist/cropper.umd.js",
  "module": "dist/cropper.es.js",
  "typings": "dist/types/cropper.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "npm-run-all -p watch:*",
    "build": "npm-run-all -p build:*",
    "build:js": "tsc --module commonjs && cross-env NODE_ENV=production rollup -c",
    "build:css": "sass --load-path='./' --no-source-map src/css/index.scss dist/cropper.css",
    "watch:js": "rollup -c -w",
    "watch:css": "npm run build:css -- --watch",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint 'src/css/*.scss'",
    "lint:js": "eslint ./src/js --ext .js,.ts",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.44.0",
    "rollup-plugin-serve": "^1.1.0",
    "sass": "^1.32.8",
    "stylelint": "^13.12.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "keywords": [
    "cropper"
  ],
  "lint-staged": {
    "./src/js/*.{js,ts}": "eslint",
    "./src/css/*.{css,scss}": "stylelint --syntax=scss"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "Kisstar",
  "homepage": "https://github.com/kisstar/cropper.js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kisstar/cropper.js.git"
  },
  "bugs": {
    "url": "https://github.com/kisstar/cropper.js/issues"
  },
  "license": "MIT"
}
